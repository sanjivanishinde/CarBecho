<p id="notice"><%= notice %></p>

<h1>Bids</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Amount</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.name %></td>
        <td><%= bid.email %></td>
        <td><%= bid.amount %></td>
        <td><%= bid.phone_number %></td>
        <td><%= link_to 'Show', [@car, bid] %></td>
        <td><%= link_to 'Edit', edit_car_bid_path(@car, bid) %></td>
        <td><%= link_to 'Destroy', [@car, bid] , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bid', new_car_bid_path %>
<%= link_to 'Go to Car', car_path(@car)%>
